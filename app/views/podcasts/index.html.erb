<title>Clean Blog</title>

<%= render 'shim' %>
<%= render 'navigation' %>
<%= render 'header' %>

<!-- Main Content -->
<div class="container">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
            <% @podcasts.each do |podcast| %>
              <div class='col-md-4'>
                <img src="http://placehold.it/200x200">

              </div>
              <div class="post-preview col-md-8">
                <%= link_to best_episodes_path do %>
                  <h2 class="post-title">
                    <%= podcast.title %>
                  </h2>
                  <% end %>
                  <h3 class="post-subtitle">
                    <%= truncate(podcast.description, :length => 30) %>
                  </h3>
                  <p><%= truncate(podcast.url, :length => 30) %></p>
                  <br>
                <!-- <p class="post-meta">Posted by <a href="#">Start Bootstrap</a> on September 24, 2014</p> -->
              </div>
              <hr>
              <% end %>
            </div>
            <hr>

            <!-- Pager -->
            <ul class="pager">
                <li class="next">
                    <a href="#">Older Posts &rarr;</a>
                </li>
            </ul>

    </div> <!-- row -->
</div>

<br>

<%= render 'footer' %>













<p id="notice"><%= notice %></p>

<h1>Podcasts</h1>
<div class="container">
  <h3>container</h3>container
</div>

<table class='table table-condensed'>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <div class="media">
    <div class="media-left">
      <a href="#">
        <img class="media-object" src="..." alt="...">
      </a>
    </div>
    <div class="media-body">
      <h4 class="media-heading">Media heading</h4>
      ...
    </div>
  </div>

  <tbody>
    <% @podcasts.each do |podcast| %>

      <tr>
        <td><%= podcast.title %></td>
        <td> hosted by: <br><%= podcast.host %></td>
        <!-- <td><%= podcast.description %></td> -->
        <td><%= truncate(podcast.description, :length => 30) %></td>
        <!-- <td><%= podcast.my_review %></td> -->
        <td><%= truncate(podcast.my_review, :length => 40) %></td>
        <!-- <td><%= podcast.url %></td> -->
        <td><%= truncate(podcast.url, :length => 20) %></td>
        <td><%= link_to 'Show', podcast %></td>
        <td><%= link_to 'Edit', edit_podcast_path(podcast) %></td>
        <td><%= link_to 'Destroy', podcast, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Podcast', new_podcast_path %>
